<body>
    <div id="container">
            <form action="/years/<%=year_id%>/<%=student.className%>/<%=classid%>/students/<%=student._id%>?_method=PUT" method="POST">
            <legend class="fs-1 mb-1">Edit Student Details</legend>  
                <div class="input-box mt-1">
                    <label for="firstname">FirstName</label>
                    <input class="input" type="text" name="firstname" id="firstname" value="<%=student.firstname%>">
                </div>
                <div class="input-box">
                    <label for="othername">OtherName</label>
                    <input class="input" type="text" name="othername" id="othername" value="<%=student.othername%>">
                </div>                            
                <div class="input-box">
                    <label for="surname">Surname</label>
                    <input class="input" type="text" name="surname" id="surname"  value="<%=student.surname%>">
                </div>
                <div class="input-box">
                <input class="input" type="number" value="<%=student.Class%>" name="class" readonly id="Class">
                </div>
                <button id="submit" class="button" type="submit">Submit</button>
            </form>
    </div>
