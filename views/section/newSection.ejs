    <div id="container">
<!--         <div class="section-details"> -->
            <form action="/sections" method="POST">
                <legend class="fs-1 mb-1">Enter New Section Details</legend>
                <div class="input-box mt-1">
                    <label for="section">Enter Year</label>
                    <input class="input" type="text" name="section" id="section">                    
                </div>
                <div class="input-box">
                    <label for="sectionStartDate">Section Start Date</label>
                    <input class="input" type="date" name="startDate" id="sectionStartDate">
                </div>
                <div class="input-box">
                    <label for="sectionEndDate">Section End Date</label>
                    <input class="input" type="date" name="endDate" id="sectionEndDate">
                </div>
                <div class="input-box">
                    <label for="1stStartDate">First Term Start Date</label>
                    <input class="input" type="date" name="firsttermstartDate" id="1stStartDate">                
                </div>                         
                <div class="input-box">
                    <label for="1stEndDate">First Term End Date</label>
                    <input class="input" type="date" name="firsttermendDate" id="1stEndDate">
                </div>    
                <div class="input-box">
                    <label for="2ndStartDate">Second Term Start Date</label>                                
                    <input class="input" type="date" name="secondtermstartDate" id="2ndStartDate">
                </div>
                <div class="input-box">                               
                    <label for="2ndEndDate">Second Term End Date</label> 
                    <input class="input" type="date" name="secondtermendDate" id="2ndEndDate">
                </div>
                <div class="input-box">
                    <label for="3rdStartDate">Third Term Start Date</label>                                
                    <input class="input" type="date" name="thirdtermstartDate" id="3rdStartDate">
                </div>
                <div class="input-box">
                    <label for="3rdEndDate">Third Term End Date</label>     
                    <input class="input" type="date" name="thirdtermendDate" id="3rdEndDate">                 
                </div>                    
                <button class="button" id="submit" type="submit">Submit</button>
            </form>
