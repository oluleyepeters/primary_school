<body>
    <header>
        <div class="navbar-toggle" style="margin-right:15px;" id="js-navbar-toggle">
            <div class="togglebox">
                <div>
                    <hr style="width:80%; margin-top:4px; margin-bottom:4px; height:1px; color:darkred;">
                    <hr style="width:80%; margin-top:4px; margin-bottom:4px; height:1px; color:darkred;">
                </div>    
            </div>
        </div>
            <div class="logo" style="margin-left:7px;">
                <li>My Beulah</li>
            </div>
            <nav class="items" >
				<li><a href="/">Home</a></li>
				<li><a href="#">News</a></li>
				<% if(currentUser && currentUser.role == "classTeacher"){ %>
					<li><a href="/years">Years</a></li>
				<%} else if(currentUser && currentUser.role == "head"){%>	
					 <li><a href="/years">Years</a></li>
					 <li><a href="/sections">Section</a></li>
				<% } %>
                <% if(currentUser){ %>
                    <li><a href="#"><%=currentUser.username%></a></li>
                    <li><a href="/logout">Logout</a></li>
                <%}else{%>
                    <li><a href="/students/login">Login</a></li>
                <%}%>
            </nav>
    </header>
<body>
    <div id="contain">
        <div class="inner-container">
        <section class="set">
            <p style="margin-left:20px;" class="box-1"><%=section.section%></p>
            <p style="margin-left:20px;" class="box-1">Section Starts :<%=section.startDate.toDateString()%></p>
            <p style="margin-left:20px;" class="box-1">Section Ends: <%=section.endDate.toDateString()%></p>                        
        </section>
         <section class="settings">
             <% admin.forEach(function(admin){ %>
             <div class="boxx"> 
                 <p><%=admin.firstname%></p>
                 <p><%=admin.surname%></p>
                 <p><%=admin.othername%></p>
                 <p><%=admin.email%></p>
                 <p><%=admin.phone_number%></p>
                 <br>
                 <a class="link" href="/sections/<%=section._id%>/admin/<%=admin._id%>/edit">Edit Admin</a>
             </div>
        <%})%>        
        <section style="margin-bottom: 50px">    
            <a class="link-1" href="/sections/<%=section._id%>/admin/new">Add Admin</a>
        </section>        
    </div>
    </div>

