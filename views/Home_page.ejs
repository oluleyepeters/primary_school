            </div>
        </div> 
            <div class="logo" style="margin-left:7px;">
                <li><a href="/">My Beulah</a></li>
            </div>
             <nav class="items" >
				<li><a href="#">News</a></li>
                <% if(currentUser && (currentUser.role === "classTeacher")){ %>
                    <li><a href="#"><%=currentUser.username_%></a></li>          
                    <li><a href="/class/<%=currentUser.username%>">My Class</a></li>                   
                <% }else if(currentUser && (currentUser.role === "Student")){ %>
                    <li><a href="#"><%=currentUser.username_%></a></li>          
                    <li><a href="/student/<%=currentUser.id%>/dashboard">Dashboard</a></li>
                <% } %> 
            </nav>
    </header>
    <div id="container">
        <div class="Head_Div">
            <% info.forEach(function(news){ %>
                <div class="Home-pg" >
                    <img id="img1" src="<%=news.path%>" width="100%" height="100%" alt="" title="">
                    <h3 class="h3">
                        <a href="/info/<%=news.id%>" class="boximg"><%=news.title%></a>
