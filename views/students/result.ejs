<!DOCTYPE html>
<html lang="en"> 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/result.css">
    <title>Document</title>
</head>
<body>
    <header>
        <div class="navbar-toggle" style="margin-right:15px;" id="js-navbar-toggle">
            <div class="togglebox">
                <div>
                    <hr style="width:80%; margin-top:4px; margin-bottom:4px; height:1px; color:darkred;">
                    <hr style="width:80%; margin-top:4px; margin-bottom:4px; height:1px; color:darkred;">
                </div>    
            </div>            
        </div>
            <div class="logo" style="margin-left:7px;">
                <li>My Beulah</li>
            </div>
            <nav class="items" >
                <li><a href="/">Home</a></li>
                <li><a href="#">News</a></li>
                <% if(currentUser && currentUser.role == "classTeacher"){ %>
                    <li><a href="/years">Years</a></li>
                <%} else if(currentUser && currentUser.role == "head"){%>   
                     <li><a href="/years">Years</a></li>
                     <li><a href="/sections">Section</a></li>
                <% } %>
                <% if(currentUser){ %>
                    <li><a href="#"><%=currentUser.username%></a></li>
                    <li><a href="/logout">Logout</a></li>
                <%}else{%>
                    <li><a href="/students/login">Login</a></li>
                <%}%>
            </nav>
        </div>
    </header>
<div id="container">
    <div>
    <section class="main">
        <p><%=student.username%></p>        
        <p><%=student.firstname%></p>
        <p><%=student.othername%></p>
        <p><%=student.surname%></p>                
    </section>

    <section class="editresult"> 
        <table class="sujects">
            <thead>
                <tr class="head"> 
                    <th>Subject</th>
                    <th>Exam</th>
                    <th>1st Test</th>
                    <th>2nd Test</th>
                    <th>Assg</th>
                </tr>
            </thead>
            <tbody>
                <%result.subjects.forEach(function(subject){%>
                <tr>
                    <td class="sub"><%=subject.subject%></td>
                    <td class="sub"><%=subject.Examination%></td>
                    <td class="sub"><%=subject.First_test%></td>
                    <td class="sub"><%=subject.Second_test%></td>
                    <td class="sub"><%=subject.assignment%></td>
                </tr>
                <%})%>
            </tbody>
        </table>
    </section>
    </div>
</div>

<% include ../partials/footer %>